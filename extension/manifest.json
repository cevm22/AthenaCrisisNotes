{
  "manifest_version": 2,
  "name": "AC-Notes",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "webRequest", "webNavigation", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    "popup.js",
    "athenacrisisnotes.js" 
  ]
}
